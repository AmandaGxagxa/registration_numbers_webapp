<div class="container">


  <h1>Registration web Application</h1>

  <form method="post" action="/registration">
      <div class="input-group col-4 ">
        <span class="input-group-text input-group-prepend" id="inputGroup-sizing-default">Reg Number</span>
        <input type="text" class="form-control input col-12" aria-label="Sizing example input" pattern='[A-Z]{2,3}\s\d{3}\W\d{3}|[A-Z]{2,3}\s\d{3,6}'
          title="Please add the right format eg CA 1425" placeholder="CA 111-111" name="names" aria-describedby="inputGroup-sizing-default">
      </div>

      <div class="error">
        {{#if messages.info}}
        <span class="err">{{messages.info}}</span>
        {{/if}}
      </div>
      <br>
        <button type="submit" class="btn btn-primary  ">Add</button>
        <a href="/registration/reset" title="this will delete all you registratio numbers" class="btn btn-danger"
          name="button">Reset</a>
      <br>
    <div class="towns2">
      <hr>
      <h5>SELECT BY TOWN</h5>
    
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="menu" data-toggle="dropdown">All Towns
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu " class="form-control">
          <li>
            <a href="/All" class="form-control">All</a>
          </li>
          <li>
            <a href="/CA">Cape Town</a>
          </li>
          <li>
            <a href="/CY">Bellville</a>
          </li>
          <li>
            <a href="/CJ">Paarl</a>
          </li>
          <li>
            <a href="/CL">Stellenbosch</a>
          </li>
          <li>
            <a href="/CK">Malmersbury</a>
          </li>
          <li>
            <a href="/CAW">George</a>
          </li>
        </ul>
      </div>

    </div>
  </form>


  <hr>
  <div class="veza">
    <div class="regNum2">
      {{#each display}}
      <div class="display">{{num_plates}}</div>
      {{/each}}
    </div>
  </div>
</div>